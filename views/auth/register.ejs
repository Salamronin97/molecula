<%- include("../partials/header") %>
<section class="thread-form-page">
  <div class="thread-form-title">Регистрация</div>
  <form method="POST" action="/register" class="thread-form-card">
    <div class="form-line">
      <label>Username</label>
      <input type="text" name="username" required minlength="3" maxlength="30" />
    </div>
    <div class="form-line">
      <label>Email</label>
      <input type="email" name="email" required />
    </div>
    <div class="form-line">
      <label>Пароль</label>
      <input type="password" name="password" required minlength="6" />
    </div>
    <button type="submit" class="toolbar-btn toolbar-btn-primary">Создать аккаунт</button>
  </form>
</section>
<%- include("../partials/footer") %>

<%- include("partials/header") %>

<section class="panel" style="max-width:700px;margin:24px auto;">
  <h1>Редактировать профиль</h1>
  <form method="POST" action="/me/edit">
    <label>Username
      <input type="text" value="<%= user.username %>" disabled />
    </label>
    <label>Email
      <input type="text" value="<%= user.email %>" disabled />
    </label>
    <label>О себе
      <textarea name="bio" rows="6" maxlength="500"><%= user.bio || "" %></textarea>
    </label>
    <button type="submit">Сохранить</button>
  </form>
</section>

<%- include("partials/footer") %>


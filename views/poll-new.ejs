<%- include("partials/header") %>

<section class="thread-form-page">
  <div class="thread-form-title">Создать опрос</div>
  <form action="/polls" method="POST" enctype="multipart/form-data" class="thread-form-card">
    <div class="form-line">
      <label>Тема</label>
      <input type="text" name="title" required maxlength="140" placeholder="Название опроса" />
    </div>

    <div class="form-line">
      <label>Раздел</label>
      <select name="category_id" required>
        <% Object.keys(categoryGroups).forEach((groupName) => { %>
          <optgroup label="<%= groupName %>">
            <% categoryGroups[groupName].forEach((category) => { %>
              <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
          </optgroup>
        <% }) %>
      </select>
    </div>

    <div class="form-line">
      <label>Окончание</label>
      <input type="datetime-local" name="end_at" required />
    </div>

    <div class="form-line">
      <label>Описание</label>
      <textarea name="description" rows="7" required maxlength="15000" placeholder="Текст опроса"></textarea>
    </div>

    <div class="form-line inline-check">
      <label><input type="checkbox" name="is_anonymous" value="1" /> Анонимное голосование</label>
    </div>

    <div class="form-line">
      <label>Фото (можно несколько)</label>
      <input type="file" name="images" accept="image/*" multiple />
    </div>

    <div class="form-line">
      <label>Видео (можно несколько)</label>
      <input type="file" name="videos" accept="video/*" multiple />
    </div>

    <div id="options-wrap" class="options-wrap">
      <div class="form-line">
        <label>Вариант 1</label>
        <input type="text" name="options" required />
      </div>
      <div class="form-line">
        <label>Вариант 2</label>
        <input type="text" name="options" required />
      </div>
    </div>

    <div class="form-actions">
      <button type="button" id="add-option" class="toolbar-btn">Добавить вариант</button>
      <button type="submit" class="toolbar-btn toolbar-btn-primary">Опубликовать</button>
    </div>
  </form>
</section>

<%- include("partials/footer") %>

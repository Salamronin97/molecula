<%- include("partials/header") %>

<section class="card profile-card">
  <% if (profileUser.avatar_path) { %>
    <img src="<%= profileUser.avatar_path %>" alt="avatar" class="profile-avatar" />
  <% } %>
  <h1><%= profileUser.username %></h1>
  <p class="muted">ID: <%= profileUser.id %> · Зарегистрирован: <%= profileUser.created_at %> <%= profileUser.is_admin ? "· Администратор" : "" %></p>
  <p><%= profileUser.bio || "Описание пока не заполнено." %></p>
  <% if (currentUser && currentUser.id === profileUser.id) { %>
    <a href="/me/edit" class="btn ghost">Редактировать профиль</a>
  <% } %>
</section>

<section class="card">
  <h2>Анкеты пользователя</h2>
  <% if (!surveys.length) { %>
    <p>Пока нет опубликованных анкет.</p>
  <% } %>
  <% surveys.forEach((survey) => { %>
    <article class="survey-item">
      <h3><a href="/surveys/<%= survey.id %>"><%= survey.title %></a></h3>
      <p class="muted">Ответов: <%= survey.responses_count %> · <span class="timer" data-countdown="<%= survey.end_at %>"></span></p>
    </article>
  <% }) %>
</section>

<%- include("partials/footer") %>

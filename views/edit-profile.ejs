<%- include("partials/header") %>

<section class="thread-form-page">
  <div class="thread-form-title">Редактировать профиль</div>
  <form method="POST" action="/me/edit" enctype="multipart/form-data" class="thread-form-card">
    <div class="form-line">
      <label>Username</label>
      <input type="text" value="<%= user.username %>" disabled />
    </div>
    <div class="form-line">
      <label>Email</label>
      <input type="text" value="<%= user.email %>" disabled />
    </div>
    <div class="form-line">
      <label>Аватар</label>
      <input type="file" name="avatar" accept="image/*" />
    </div>
    <div class="form-line">
      <label>О себе</label>
      <textarea name="bio" rows="6" maxlength="500"><%= user.bio || "" %></textarea>
    </div>
    <button type="submit" class="toolbar-btn toolbar-btn-primary">Сохранить</button>
  </form>
</section>

<%- include("partials/footer") %>
